<!DOCTYPE html>
<html>
<head>
    
    <title>ADMIN</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/css/addmin/addmin.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <div class="navigation">
        <ul>
            <li class="list active">
                <b></b>
                <b></b>
                <a href="#">
                    <span class="icon"><i class="fa-solid fa-house"></i></span>
                    <span class="title">Home</span>
                </a>
            </li>
        </ul>
        <ul>
            <li class="list" id="dsLoai">
                <b></b>
                <b></b>
                <a href="#">
                    <span class="icon"><i class="fa-solid fa-list"></i></span>
                    <span class="title">Danh Sách Loại Hải Sản</span>
                </a>
            </li>
        </ul>
        <ul>
            <li class="list" id="DsNCC">
                <b></b>
                <b></b>
                <a href="#">
                    <span class="icon"><i class="fa-solid fa-list"></i></span>
                    <span class="title">Danh Sách Nhà Cung Cấp</span>
                </a>
            </li>
        </ul>
        <ul>
            <li class="list" id="DsHaiSan">
                <b></b>
                <b></b>
                <a href="#">
                    <span class="icon"><i class="fa-solid fa-list"></i></span>
                    <span class="title">Danh Sách Hải Sản</span>
                </a>
            </li>
        </ul>
        <ul>
            <li class="list">
                <b></b>
                <b></b>
                <a href="#">
                    <span class="icon"><i class="fa-solid fa-cart-shopping"></i></span>
                    <span class="title">Danh Sách Đơn Hàng</span>
                </a>
            </li>
        </ul>
        <ul>
            <li class="list" id="dsTaiKhoan">
                <b></b>
                <b></b>
                <a href="#">
                    <span class="icon"><i class="fa-solid fa-user"></i></span>
                    <span class="title">Danh Sách Tài Khoản</span>
                </a>
            </li>
        </ul>
    </div>
    <div class="toggle">
        <i class="fa-solid fa-bars open"></i>
        <i class="fa-solid fa-xmark close"></i>
    </div>




    <div class="main-content mess">
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script>
        let menuToggle = document.querySelector('.toggle');
        let navigation = document.querySelector('.navigation');
        menuToggle.onclick = function () {
            menuToggle.classList.toggle('active');
            console.log(menuToggle);
            navigation.classList.toggle('active');
            console.log(navigation);
        }



        let list = document.querySelectorAll('.list');
        for (let i = 0; i < list.length; i++) {
            list[i].onclick = function () {
                let j = 0;
                while (j < list.length) {
                    list[j++].className = 'list';
                }
                list[i].className = 'list  active';
            }
        }

        $(function () {
            $('#DsHaiSan').click(function () {
                $.ajax({
                    url: "/AddMin/ShowPro", // Sử dụng giá trị href là URL cho request AJAX
                    type: "GET",
                    success: function (datare) {
                        $(".mess").html(datare);
                    },
                    error: function () {
                        // Xử lý lỗi nếu có
                    }
                });
            });
            $('#dsLoai').click(function () {
                $.ajax({
                    url: "/AddMin/categorize", // Sử dụng giá trị href là URL cho request AJAX
                    type: "GET",
                    success: function (datare) {
                        $(".mess").html("");
                        $(".mess").html(datare);
                        console.log(datare);
                    },
                    error: function () {
                        // Xử lý lỗi nếu có
                    }
                });
            });
            $('#DsNCC').click(function () {
                $.ajax({
                    url: "/AddMin/NhaCungCap", // Sử dụng giá trị href là URL cho request AJAX
                    type: "GET",
                    success: function (datare) {
                        $(".mess").html(datare);
                        console.log(datare);
                    },
                    error: function () {
                        // Xử lý lỗi nếu có
                    }
                });
            });
            $('#dsTaiKhoan').click(function () {
                $.ajax({
                    url: "/AddMin/TaiKhoans", // Sử dụng giá trị href là URL cho request AJAX
                    type: "GET",
                    success: function (datare) {
                        $(".mess").html(datare);
                        console.log(datare);
                    },
                    error: function () {
                        // Xử lý lỗi nếu có
                    }
                });
            });

        });

    </script>
</body>
</html>
